import java.util.Scanner;

public class View_TV {

	public static void main(String[] args) {
		String nombre, tPlaza="Plaza";
		int plaza;
		double anti, dNoLab, conVen, descIn=0, total=0, dLab, comCont, isr, sueldoTotal=0, imss;
		final double SUELDOBASE=250, ISR=0.02, IMSS=0.03, COMCONT=100, SUELDO=3750;
		Scanner entrada=new Scanner (System.in);
		
		System.out.println("VIEW TV");
		System.out.println("Seleccione el tipo de plaza");
		System.out.println("1. Confianza");
		System.out.println("2. Base");
		System.out.println("3. Administrativo");
		System.out.println("4. Intendencia");
		
		System.out.println("Ingrese los siguientes datos para generar recibo:");
		System.out.println("Tipo de plaza que tiene: ");
		plaza=entrada.nextInt();
		System.out.println("Su nombre: ");
		nombre=entrada.next();
		System.out.println("Su antiguedad en aÃ±os: ");
		anti=entrada.nextDouble();
		System.out.println("Dias no laborados: ");
		dNoLab=entrada.nextDouble();
		System.out.println("Contratos vendidos: ");
		conVen=entrada.nextDouble();
		
		switch (plaza) {
		case 1:
			tPlaza="Plaza de confianza";
			descIn=0;
			break;
		case 2:
			tPlaza="Plaza base";
			descIn=dNoLab*SUELDOBASE;
			total=total+200;
			break;
		case 3:
			tPlaza="Plaza Administrativa";
			descIn=dNoLab*SUELDOBASE;
			break;
		case 4:
			tPlaza="Plaza de Intendencia";
			descIn=dNoLab*SUELDOBASE;
			total=total+(SUELDO*ISR);
			break;

		default:
			tPlaza="Inexistente";
			break;
		}
		
		if (anti>=10) {
			total=total+300;
		} else {
			total=total;

		}
		
		dLab=15-dNoLab;
		comCont=conVen*COMCONT;
		sueldoTotal=SUELDO-descIn;
		isr=sueldoTotal*ISR;
		imss=SUELDO*IMSS;
		total=total+sueldoTotal+comCont-isr-imss;
		
		System.out.println("VIEW TV");
		System.out.println("======== RECIBO DE NOMINA ========");
		System.out.println("Nombre: "+nombre);
		System.out.println("Antiguedad: "+anti);
		System.out.println("Tipo de plaza: "+tPlaza);
		System.out.println("Dias Laborados: "+dLab);
		System.out.println("Dias no laborados: "+dNoLab);
		System.out.println("Contratos vendidos: "+conVen);
		System.out.println("Sueldo base: "+SUELDO);
		System.out.println("Dias no laborados($): "+descIn);
		System.out.println("Comisiones por contrato: "+comCont);
		System.out.println("ISR: "+isr);
		System.out.println("Seguro Social: "+imss);
		System.out.println("Total a pagar neto: "+total);
		
		
	}

}
